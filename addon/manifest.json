{
    "manifest_version": 2,
    "name": "Moera",
    "version": "0.2.1",
    "description": "Moera Decentralized Social Network web client loader.",
    "author": "Shmuel Leib Melamud",
    "homepage_url": "https://github.com/MoeraOrg/moera-browser-extension",

    "icons": {
        "32": "icons/moera-32.png",
        "64": "icons/moera-64.png",
        "128": "icons/moera-128.png"
    },
    "permissions": [
        "storage",
        "webRequest",
        "webRequestBlocking",
        "webNavigation",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}
