{
    "manifest_version": 2,
    "name": "Moera Browser Extension",
    "version": "0.1.0",
    "description": "Moera Decentralized Social Network browser extension.",

    "icons": {
        "32": "icons/moera-32.png"
    },
    "permissions": [
        "storage",
        "webRequest",
        "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}
